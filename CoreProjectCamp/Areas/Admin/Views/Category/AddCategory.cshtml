
@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout_.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Blog ekleme</title>
    <style>
        span.field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <form action="/Admin/Category/AddCategory" method="post">
        <div class="form-group">
            <label asp-for="CategoryName">Kategori Adı </label>
            <input type="text" asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryColor">Kategori Rengi</label>
            <input type="color" asp-for="CategoryColor" class="form-control" />
            <span asp-validation-for="CategoryColor"></span>
        </div>


        <div class="form-group">
            <label asp-for="CategoryDescription">Kategori Açıklaması</label>
            <textarea asp-for="CategoryDescription" class="form-control" rows="5" cols="50"></textarea>
            <span asp-validation-for="CategoryDescription"></span>
        </div>
        <button type="submit" class="btn btn-primary">Yeni Kategori Ekle</button>
    </form>
</body>
</html>

