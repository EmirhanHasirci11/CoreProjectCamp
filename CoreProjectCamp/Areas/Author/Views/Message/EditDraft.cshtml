@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "EditDraft";
    Layout = "~/Areas/Author/Views/Shared/_Author_Layout_.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- include libraries(jQuery, bootstrap) -->

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <title></title>
</head>
<body>
    <div class="wrapper wrapper-content">
        <div class="row">
            @await Component.InvokeAsync("MessageSidebar")
            <div class="col-lg-9">
                <div class="mail-box-header">
                    <div class="float-right tooltip-demo">
                        <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslak olarak kaydet"><i class="fa fa-pencil"></i> Taslak</a>
                        <a href="mailbox.html" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Maili iptal et"><i class="fa fa-times"></i> İptal et</a>
                    </div>
                    <h2>
                        Yeni Mail
                    </h2>
                </div>
                <div class="mail-box">


                    <div class="mail-body">

                        <form method="post" action="/Author/Message/NewMessage">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Kime:</label>

                                <div class="col-sm-10"><input type="text" asp-for="Receiver"  class="form-control" placeholder="Alıcı maili"></div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Konu:</label>

                                <div class="col-sm-10"><input type="text" asp-for="Subject" class="form-control" placeholder="Mail konusu"></div>
                            </div>


                            <div class="mail-text h-200">

                                <textarea id="summernote" asp-for="MessageDetails" class="form-control"></textarea>
                                <div class="clearfix"></div>
                            </div>
                            <div class="mail-body text-right tooltip-demo">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-reply"></i> Gönder</button>
                                <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Maili iptal et"><i class="fa fa-times"></i> İptal et</a>
                                <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslak olarak kaydet"><i class="fa fa-pencil"></i> Taslak</a>
                            </div>
                        </form>
                    </div>
                    <div class="clearfix"></div>



                </div>
            </div>
        </div>
    </div>

    <script>
        $('#summernote').summernote({
            placeholder: 'Mail içeriğini buraya giriniz.',
            tabsize: 2,
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
</body>
</html>

