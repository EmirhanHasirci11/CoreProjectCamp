@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendboxMessageDetails";
    Layout = "~/Areas/Author/Views/Shared/_Author_Layout_.cshtml";
}
@{
    string time = "";
    DateTime now = DateTime.Now;
    TimeSpan calculatedTime = now.Subtract(Model.MessageDate);

    if (calculatedTime.Days == 0)
    {
        if (calculatedTime.Minutes == 0 && calculatedTime.Hours == 0)
        {
            time = "Şimdi";
        }

        else if (calculatedTime.Minutes > 0 && calculatedTime.Hours == 0)
        {
            time = calculatedTime.Minutes + " Dakika önce";
        }
        else
        {
            time = calculatedTime.Hours + " Saat " + calculatedTime.Minutes + " Dakika önce";
        }
    }
    else
    {
        if (calculatedTime.Hours == 0)
        {
            time = calculatedTime.Days + " Gün önce";
        }
        else
        {
            time = calculatedTime.Days + " Gün " + calculatedTime.Hours + " Saat önce";
        }
    }
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>

    <div class="wrapper wrapper-content">
        <div class="row">
            @await Component.InvokeAsync("MessageSidebar")
            <div class="col-lg-9  ">
                <div class="mail-box-header">
                    <div class="float-right tooltip-demo">                                          
                        <a href="#" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Print email"><i class="fa fa-print"></i> </a>
                        <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash"><i class="fa fa-trash-o"></i> </a>
                    </div>
                    <h2>
                        Mesajı Görüntüle
                    </h2>
                    <div class="mail-tools tooltip-demo m-t-md">


                        <h3>
                            <span class="font-normal">Konu: </span>@Model.Subject
                        </h3>
                        <h5>
                            <span class="float-right font-normal"></span>
                            <span class="font-normal">Kime: <img style="width:50px" src=" @Model.ReceiverUser.AuthorImage " class="circle-border" />@Model.ReceiverUser.AuthorMail (@Model.ReceiverUser.AuthorName @Model.ReceiverUser.AuthorSurname) </span>@time gönderildi
                        </h5>
                    </div>
                </div>
                <div class="mail-box">


                    <div class="mail-body">
                        @Html.Raw(Model.MessageDetails)
                    </div>

                    <div class="mail-body text-right tooltip-demo">                        
                        <button title="" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Sil</button>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




