@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Display_Layout_.cshtml";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="/Blog/BlogDetails/@item.BlogID">
                                @*
                                    350x250 resim boyutu
                                *@
                                <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 0
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="badge" style="color:white;background-color:@item.Category.CategoryColor">@item.Category.CategoryName</span>
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="/Blog/BlogDetails/@item.BlogID">@item.BlogTitle</a>
                                </h5>
                                @if (item.BlogContent.Length < 200)
                                {
                                    <p class="card-text mb-3">@item.BlogContent </p>
                                }
                                else
                                {
                                    <p class="card-text mb-3">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 200).LastIndexOf(" "))... </p>
                                }
                                <a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-primary read-m">Devamını oku</a>
                            </div>
                        </div>
                    }
                </div>                
            </div>
        </div>
    </div>
</section>

