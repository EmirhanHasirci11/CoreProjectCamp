@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <style>
        span.field-validation-error {
            color: red;
        }
    </style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/AdminPanel/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminPanel/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminPanel/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/AdminPanel/css/animate.css" rel="stylesheet">
    <link href="~/AdminPanel/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">HB</h1>

            </div>
            <h3>HBlog için kayıt olun</h3>
            <p>HBlog üzerinde içerik oluşturmak için hesap oluşturun</p>
            <form class="m-t" role="form"method="post" action="/RegisterUser/Index">
                <div class="form-group">
                    <input type="text"asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" >
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Name" class="form-control" placeholder="İsim" >
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <input type="text"asp-for="Surname" class="form-control" placeholder="Soyisim" >
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" asp-for="Mail" placeholder="Email" >
                    <span asp-validation-for="Mail"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" >
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input type="password"asp-for="ConfirmPassword" class="form-control" placeholder="Şifre tekrar" >
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" asp-for="IsCheckBoxActive"><i></i>Güvenlik sözleşmelerini okudum ve kabul ediyorum.  </label></div>
                    <span asp-validation-for="IsCheckBoxActive"></span>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten bir hesaba sahip misin?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="login.html">Giriş Yap</a>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/AdminPanel/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminPanel/js/popper.min.js"></script>
    <script src="~/AdminPanel/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/AdminPanel/js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
