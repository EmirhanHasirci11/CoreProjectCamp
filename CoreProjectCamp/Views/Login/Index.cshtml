@model UserSignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Display_Layout_.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Siteye giriş yap</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form action="/Login/Index" method="post">
                    <div class="form-group" >
                        <label for="exampleInputEmail1 mb-2">E-Mail</label>
                        <input type="email"  class="form-control" asp-for="Username" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">                        
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1" placeholder="" >
                        <span asp-validation-for="Password"></span>
                    </div>                   
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a href="register.html"> Hesabın yok mu?</a></p>
                </form>
            </div>
        </div>
    </div>
</section>
