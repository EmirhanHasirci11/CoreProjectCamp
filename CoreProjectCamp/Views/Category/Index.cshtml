@model IEnumerable<EntityLayer.Concrete.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Kategori Açıklaması</th>
                <th>Kategori Rengi</th>
                <th>Kategori Durumu</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDescription</td>
                    <td><span class="badge" style="background-color:@item.CategoryColor;color:white;">Kategori</span></td>
                    <td>@item.CategoryStatus</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
