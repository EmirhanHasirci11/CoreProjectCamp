@model IEnumerable<EntityLayer.Concrete.Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Blog Başlığı</th>
                                <th> Kategori</th>
                                <th> Tarih</th>
                                <th> Blog Detayları</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image">
                                    </td>
                                    <td> @item.BlogTitle</td>
                                    <td>
                                        <span class="badge" style="background-color:@item.Category.CategoryColor; color:white">@item.Category.CategoryName</span>
                                    </td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>


                                    <td><a href="/Blog/BlogDetails/@item.BlogID"></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>