

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<div class="tech-btm">
    <p>Yeni blogları kaçırmak istemiyorsanız bültene abone olabilirsiniz</p>
    <form method="post">
        <input type="email" id="txtmail" placeholder="Email" name="Mail">
        <input type="submit" id="btn" value="Abone Ol">
    </form>

</div>
<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            Mail: $("#txtmail").val()
        };
        $.ajax({
            type: 'post',
            url: "@Url.Action("SubscribeMail","NewsLetter")",
            dataType:'Json',
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
                alert("Abonelik başarıyla gerçekleşti");
            }
        });
    });
</script>


